<h1>Listing blocks</h1>

<table>
  <thead>
    <tr>
      <th>Address</th>
      <th>Limit</th>
      <th>Count</th>
      <th>Fromday</th>
      <th>Today</th>
      <th>Fromhour</th>
      <th>Tohour</th>
      <th>Status</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @blocks.each do |block| %>
      <tr>
        <td><%= block.address %></td>
        <td><%= block.limit %></td>
        <td><%= block.count %></td>
        <td><%= block.fromDay %></td>
        <td><%= block.toDay %></td>
        <td><%= block.fromHour %></td>
        <td><%= block.toHour %></td>
        <td><%= block.status %></td>
        <td><%= link_to 'Show', block %></td>
        <td><%= link_to 'Edit', edit_block_path(block) %></td>
        <td><%= link_to 'Destroy', block, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

